import pandas as pd

sentiment = pd.read_csv("/kaggle/input/datasett/fear_greed_index (1).csv")
trades = pd.read_csv("/kaggle/input/datasett/historical_data (1).csv")



sentiment.shape
trades.shape

sentiment.isnull().sum()
trades.isnull().sum()

sentiment.duplicated().sum()
trades.duplicated().sum()



sentiment.columns = sentiment.columns.str.strip().str.lower()
trades.columns = trades.columns.str.strip().str.lower().str.replace(" ", "_")

print(sentiment.columns)
print(trades.columns)



# Convert to datetime
sentiment['date'] = pd.to_datetime(sentiment['date'])
trades['timestamp'] = pd.to_datetime(trades['timestamp'])

# Create daily date column
trades['date'] = trades['timestamp'].dt.date
sentiment['date'] = sentiment['date'].dt.date



merged = trades.merge(
    sentiment[['date','classification','value']],
    on='date',
    how='left'
)

print(merged.head())
print("Missing sentiment values:", merged['classification'].isnull().sum())



print("Sentiment shape:", sentiment.shape)
print("Trades shape:", trades.shape)



print(sentiment.isnull().sum())
print(trades.isnull().sum())



print("Sentiment duplicates:", sentiment.duplicated().sum())
print("Trades duplicates:", trades.duplicated().sum())



daily_metrics = merged.groupby(['account','date']).agg({
    'closed_pnl':'sum',
    'size_usd':'mean',
    'execution_price':'mean',
    'trade_id':'count'
}).reset_index()

daily_metrics.rename(columns={'trade_id':'trade_count'}, inplace=True)

print(daily_metrics.head())



daily_metrics = daily_metrics.merge(
    sentiment[['date','classification']],
    on='date',
    how='left'
)



# Final cleaned merged dataset
final_df = merged.copy()

print(final_df.shape)
final_df.head()



trades['timestamp_ist'] = pd.to_datetime(trades['timestamp_ist'], dayfirst=True)

trades['date'] = trades['timestamp_ist'].dt.date



merged = trades.merge(
    sentiment[['date','classification','value']],
    on='date',
    how='left'
)



merged['classification'].isnull().sum()
merged = merged.dropna(subset=['classification'])




final_df.to_csv('/kaggle/working/cleaned_trader_sentiment.csv', index=False)



